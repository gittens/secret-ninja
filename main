#include <SDL.h>

MAIN_MENU_LOOP;
	LOOP:
		CLICK SELECTION OR PRESS ENTER ON SELECTION
		RETURN SELECTED OPTION
END MAIN_MENU_LOOP;



MAIN;
	LOAD SDL
	LOAD GRAPHICS
	LOAD INTRO

	LOAD MAIN_MENU
	MAIN_MENU_LOOP(); //RETURNS SELECTED OPTION

	IF SELECTED == PLAY

	ELSE IF SELECTED == OPTIONS

	ELSE IF SELECTED == QUIT GAME


END MAIN;
